{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./dist",
    "removeComments": true,
    "target": "ESNext",

    "baseUrl": "./src/",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUnusedLocals": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
